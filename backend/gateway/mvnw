#!/bin/sh
set -e

MAVEN_VERSION=3.8.6
MVNW_HOME=$HOME/.m2/wrapper/dists/apache-maven-$MAVEN_VERSION-bin
MVNW_CMD=./mvnw

if [ ! -d "$MVNW_HOME" ]; then
  mkdir -p "$MVNW_HOME"
  curl -L -o "$MVNW_HOME/apache-maven-$MAVEN_VERSION-bin.zip" "https://archive.apache.org/dist/maven/binaries/apache-maven-$MAVEN_VERSION-bin.zip"
  unzip -q "$MVNW_HOME/apache-maven-$MAVEN_VERSION-bin.zip" -d "$MVNW_HOME"
  rm "$MVNW_HOME/apache-maven-$MAVEN_VERSION-bin.zip"
fi

exec "$MVNW_CMD" "$@"