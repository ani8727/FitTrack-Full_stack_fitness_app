# Activity Service environment
ACTIVITY_SERVICE_PORT=8083

# MongoDB Atlas
SPRING_DATA_MONGODB_URI=mongodb+srv://activity_user:password@cluster.mongodb.net/activity_db?retryWrites=true&w=majority&appName=FitApp

# RabbitMQ / CloudAMQP
SPRING_RABBITMQ_ADDRESSES=amqps://user:password@host/vhost
SPRING_RABBITMQ_USERNAME=user
SPRING_RABBITMQ_PASSWORD=replace-me
SPRING_RABBITMQ_VHOST=vhost
RABBITMQ_EXCHANGE=activity.exchange
RABBITMQ_QUEUE=activity.queue
RABBITMQ_ROUTING_KEY=activity.tracking
RABBITMQ_DEAD_LETTER_EXCHANGE=activity.dlx
RABBITMQ_DEAD_LETTER_QUEUE=activity.dlq
RABBITMQ_MESSAGE_TTL_MS=600000
RABBITMQ_LISTENER_AUTO_START=true

# Upstream Gateway URL
API_GATEWAY_URL=http://gateway:8085

# Auth0
AUTH0_ISSUER_URI=https://your-tenant.auth0.com/
AUTH0_JWK_SET_URI=https://your-tenant.auth0.com/.well-known/jwks.json
AUTH0_AUDIENCE=fitness_auth
