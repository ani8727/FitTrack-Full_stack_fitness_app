# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your values
# DO NOT commit .env file with actual credentials
# ============================================

# ============================================
# CONFIG SERVER & SERVICE DISCOVERY
# ============================================
CONFIG_SERVER_URL=http://localhost:8888
CONFIG_SERVER_PORT=8888

EUREKA_DEFAULT_ZONE=http://localhost:8761/eureka/
EUREKA_HOST=localhost
EUREKA_PREFER_IP=false
EUREKA_SERVER_PORT=8761

# ============================================
# USER SERVICE DATABASE (PostgreSQL)
# ============================================
USER_SERVICE_PORT=8081
USER_DB_URL=jdbc:postgresql://your-host:5432/user_db?sslmode=require&currentSchema=user_schema
USER_DB_USER=your_db_user
USER_DB_PASSWORD=your_secure_password

# ============================================
# ADMIN SERVICE DATABASE (PostgreSQL)
# ============================================
ADMIN_SERVICE_PORT=8082
ADMIN_DB_URL=jdbc:postgresql://your-host:5432/admin_db?sslmode=require&currentSchema=admin_schema
ADMIN_DB_USER=your_db_user
ADMIN_DB_PASSWORD=your_secure_password

# ============================================
# ACTIVITY & AI SERVICES (MongoDB)
# ============================================
ACTIVITY_SERVICE_PORT=8083
AI_SERVICE_PORT=8084
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/fitness_db

# ============================================
# API GATEWAY
# ============================================
GATEWAY_SERVICE_PORT=8085
CORS_ALLOWED_ORIGINS=http://localhost:5173

# ============================================
# AUTH0 AUTHENTICATION
# ============================================
AUTH0_ISSUER_URI=https://your-tenant.auth0.com/
AUTH0_JWK_SET_URI=https://your-tenant.auth0.com/.well-known/jwks.json
AUTH0_AUDIENCE=your_api_audience

# ============================================
# RABBITMQ MESSAGE BROKER
# ============================================
RABBITMQ_URI=amqps://user:password@your-rabbitmq-host/vhost
RABBITMQ_USERNAME=your_rabbitmq_user
RABBITMQ_PASSWORD=your_rabbitmq_password
RABBITMQ_VIRTUAL_HOST=your_vhost
RABBITMQ_LISTENER_AUTO_START=true
RABBITMQ_EXCHANGE=activity.exchange
RABBITMQ_QUEUE=activity.queue
RABBITMQ_ROUTING_KEY=activity.tracking

# ============================================
# AI SERVICE - GEMINI API
# ============================================
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent
GEMINI_API_KEY=your_gemini_api_key

# ============================================
# MONITORING (SENTRY) - Optional
# ============================================
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================
# DATABASE & RUNTIME SETTINGS
# ============================================
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false
SPRING_CLOUD_DISCOVERY_ENABLED=true
SPRING_PROFILES_ACTIVE=local
