# AI Service environment (example values only)

# Port (same pattern as other services: single PORT var)
PORT=8084

# Gateway / Auth0
API_GATEWAY_URL=https://your-gateway.example.com
AUTH0_AUDIENCE=your_auth0_audience
AUTH0_ISSUER_URI=https://your-tenant.auth0.com/
AUTH0_JWK_SET_URI=https://your-tenant.auth0.com/.well-known/jwks.json

# Spring profiles / config
SPRING_PROFILES_ACTIVE=prod
SPRING_CLOUD_CONFIG_ENABLED=false
SPRING_CLOUD_CONFIG_IMPORT_CHECK_ENABLED=false
SPRING_CLOUD_DISCOVERY_ENABLED=false
EUREKA_CLIENT_ENABLED=false
EUREKA_CLIENT_FETCH_REGISTRY=false
EUREKA_CLIENT_REGISTER_WITH_EUREKA=false

# Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# MongoDB Atlas (replace with your connection string)
# Example: mongodb+srv://<user>:<password>@cluster0.mongodb.net/ai_db?retryWrites=true&w=majority
SPRING_DATA_MONGODB_URI=mongodb+srv://<user>:<password>@<host>/<database>?retryWrites=true&w=majority&tls=true&appName=FitApp
SPRING_DATA_MONGODB_DATABASE=ai_db

# RabbitMQ / CloudAMQP (replace with your CloudAMQP/AMQP connection)
# Example: amqps://<user>:<password>@host/vhost
SPRING_RABBITMQ_ADDRESSES=amqps://<user>:<password>@<host>/<vhost>
SPRING_RABBITMQ_USERNAME=<user>
SPRING_RABBITMQ_PASSWORD=<password>
SPRING_RABBITMQ_VIRTUAL_HOST=<vhost>
SPRING_RABBITMQ_SSL_ENABLED=true

# Gemini API
GEMINI_API_URL=https://generativelanguage.googleapis.com
GEMINI_API_KEY=replace-me
